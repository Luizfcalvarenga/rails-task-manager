<h1>My tasks</h1>
<ul>
<% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task) %>
         <span><%= link_to "Delete",
            destroy_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
          </span>
    </li>
  <% end %>
</ul>

<%= link_to "Create new task", tasks_new_path %>
